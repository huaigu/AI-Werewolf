{
  "name": "@ai-werewolf/fastify-agent",
  "version": "1.0.0",
  "description": "AI Werewolf Fastify-based player agent server",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "dev:config": "bun --watch src/index.ts --config=",
    "dev:default": "bun --watch src/index.ts --config=configs/default.json",
    "dev:aggressive": "bun --watch src/index.ts --config=configs/aggressive.json",
    "dev:conservative": "bun --watch src/index.ts --config=configs/conservative.json",
    "dev:witty": "bun --watch src/index.ts --config=configs/witty.json",
    "build": "bun build src/index.ts --outdir=dist --target=bun",
    "start": "bun dist/index.js",
    "start:config": "bun dist/index.js --config=",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts"
  },
  "dependencies": {
    "fastify": "^4.24.0",
    "@fastify/cors": "^8.4.0",
    "winston": "^3.11.0",
    "zod": "^3.22.0",
    "dotenv": "^16.3.0",
    "@ai-werewolf/types": "workspace:*",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/uuid": "^9.0.7",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "bun-types": "latest",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  },
  "keywords": [
    "werewolf",
    "ai",
    "game",
    "agent",
    "fastify",
    "typescript"
  ],
  "author": "",
  "license": "MIT"
}